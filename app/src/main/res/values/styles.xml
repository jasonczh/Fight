<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.mCustomTitle" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>

    </style>

    <style name="MyCustomEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>
